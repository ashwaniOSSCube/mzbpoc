<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>
        <pluginName>OnlineShop</pluginName>
        <pluginDescription><![CDATA[OnlineShop Framework for Pimcore]]></pluginDescription>
        <pluginClassName>OnlineShop_Plugin</pluginClassName>

        <pluginIframeSrc>/plugin/OnlineShop/admin/settings</pluginIframeSrc>

        <!-- include paths relative to plugin-directory -->
        <pluginIncludePaths>
            <path>/OnlineShop/lib</path>
            <path>/OnlineShop/models</path>
            <path>/OnlineShop/controllers</path>
            <path>/OnlineShop/vendor</path>
        </pluginIncludePaths>

        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>OnlineShop</namespace>
        </pluginNamespaces>

        <pluginJsPaths>
            <path>/OnlineShop/static/js/indexfieldselectionfield/data/indexFieldSelectionField.js</path>
            <path>/OnlineShop/static/js/indexfieldselectionfield/tags/indexFieldSelectionField.js</path>
            <path>/OnlineShop/static/js/indexfieldselectionfield/data/indexFieldSelectionCombo.js</path>
            <path>/OnlineShop/static/js/indexfieldselectionfield/tags/indexFieldSelectionCombo.js</path>
            <path>/OnlineShop/static/js/indexfieldselectionfield/data/indexFieldSelection.js</path>
            <path>/OnlineShop/static/js/indexfieldselectionfield/tags/indexFieldSelection.js</path>
            <path>/OnlineShop/static/js/plugin.js</path>
            <path>/OnlineShop/static/js/pricing/config/panel.js</path>
            <path>/OnlineShop/static/js/pricing/config/item.js</path>
            <path>/OnlineShop/static/js/pricing/config/objects.js</path>
            <path>/OnlineShop/static/js/voucherservice/VoucherSeriesTab.js</path>
        </pluginJsPaths>
        <pluginCssPaths>
           <path>/OnlineShop/static/css/backend.css</path>
           <path>/OnlineShop/static/css/pricing.css</path>
        </pluginCssPaths>
    </plugin>
</zend-config>
